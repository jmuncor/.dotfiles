# --- THEME & COLORS ---
# Catppuccin Mocha theme (the port handles all colors automatically)
theme = Catppuccin Frappe

# --- MACOS INTEGRATION ---
# Hide the top title bar for a cleaner look
macos-titlebar-style = hidden

# CRITICAL: Treats the Mac 'Option' key as 'Alt'
# Without this, LazyVim shortcuts like <Alt+j> (move lines) won't work
macos-option-as-alt = true

# --- LAYOUT ---
# Padding: x uses left,right and y uses top,bottom
window-padding-x = 10
window-padding-y = 10,0

# --- FONT ---
# ensure you have a Nerd Font installed (e.g. JetBrainsMono, Hack, etc.)
# If you don't have this font, Ghostty will fallback to a default one.
font-family = "JetBrainsMono Nerd Font"
font-size = 14

# --- BEHAVIOR ---
# Hide mouse when typing (distraction free)
mouse-hide-while-typing = true

# Stop the "Are you sure?" popup when closing the window
confirm-close-surface = false

# Standard block cursor with blinking
cursor-style = block
cursor-style-blink = true
